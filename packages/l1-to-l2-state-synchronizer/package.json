    "memdown": "^5.0.0",
    "rimraf": "^2.6.3",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "@eth-optimism/core-db": "^0.0.1-alpha.25",
    "@eth-optimism/core-utils": "^0.0.1-alpha.25",
