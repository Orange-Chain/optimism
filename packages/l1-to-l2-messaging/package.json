{
  "name": "@eth-optimism/l1-to-l2-messaging",
  "version": "0.0.1-alpha.25",
  "description": "Configurable application for listening for specific L1 events and relaying them to L2",
  "main": "build/index.js",
  "files": [
    "build/**/*.js",
    "build/**/*.json"
  ],
  "scripts": {
    "all": "yarn clean && yarn build && yarn test && yarn fix && yarn lint",
    "test": "mocha --require ts-node/register 'test/*.spec.ts' --timeout 20000 --exit",
    "lint": "tslint --format stylish --project .",
    "fix": "prettier --config ../../prettier-config.json --write '{exec,test}/*.ts'",
    "build": "mkdir -p ./build && tsc -p .",
    "clean": "rimraf build/"
  },
  "keywords": [
    "optimistic",
    "rollup",
    "messaging",
    "l1",
    "l2",
    "ethereum"
  ],
  "author": "Optimism",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ethereum-optimism/optimism-monorepo.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.11.3",
    "@eth-optimism/rollup-full-node": "^0.0.1-alpha.25",
    "chai": "^4.2.0",
    "chai-bignumber": "^3.0.0",
    "ethereumjs-abi": "^0.6.8",
    "lodash": "^4.17.15",
    "memdown": "^5.0.0",
    "mocha": "^6.0.2",
    "rimraf": "^2.6.3",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "@eth-optimism/core-db": "^0.0.1-alpha.25",
    "@eth-optimism/core-utils": "^0.0.1-alpha.25",
    "@eth-optimism/rollup-core": "^0.0.1-alpha.25",
    "@eth-optimism/rollup-contracts": "^0.0.1-alpha.25",
    "@types/sinon-chai": "^3.2.2",
    "chai": "^4.2.0",
    "ethereum-waffle": "2.1.0",
    "ethers": "^4.0.37"
  }
}
